{
  "name": "platform",
  "version": "1.0.0",
  "description": "platform game",
  "main": "index.js",
  "scripts":  {
    "start": "node server.js",
    "dev": "nodemon server.js & npm run watch",
    "watch": "npm run watch-css & npm run watch-js",
    "build": "npm run build-css & npm run build-js",
    "watch-js": "watchify index.js -t browserify-css -o public/bundle.js -dv",
    "watch-css": "catw -c 'lessc --clean-css -' 'styles/*.less' -o public/styles.min.css",
    "build-js": "NODE_ENV=production browserify -t browserify-css index.js | uglifyjs -cm > public/bundle.js",
    "build-css": "lessc --clean-css styles/index.less public/styles.min.css"
  },
  "author": "morgantheplant",
    "dependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.1",
    "browserify-css": "^0.8.4",
    "catw": "^1.0.1",
    "express": "^4.13.4",
    "express-handlebars": "^3.0.0",
    "http": "0.0.0",
    "less": "^2.6.1",
    "less-plugin-clean-css": "^1.5.1",
    "matter": "^0.2.0",
    "matter-js": "^0.10.0",
    "nodemon": "^1.9.2",
    "simple_animation_loop": "^1.0.1",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  }
}
